	"devDependencies": {
		"@mysten/build-scripts": "workspace:*",
		"@types/node": "^22.15.29",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@mysten/sui": "workspace:*",
		"@mysten/utils": "workspace:*",
		"@mysten/wallet-standard": "workspace:*",
